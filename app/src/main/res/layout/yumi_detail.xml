<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8FA"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/gmarketsansbold"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="그 외 전시회" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gmarketsansmedium"
                    android:text="유미의 세포들"
                    android:textColor="#000000"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="15dp"
                    android:textSize="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="#F1F1F5"
                    android:orientation="vertical"> <!--marginTop나중에 수정-->

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:layout_gravity="center|top"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/yumi2" />

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp"
                        android:columnCount="4"
                        android:rowCount="2">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/pin" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:src="@drawable/calendar" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:layout_marginRight="100dp"
                            android:text="KT\u0026G 상상마당 부산" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:text="2021.12.08~2022.03.20" />

                        <ImageView
                            android:id="@+id/yumi_call"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_row="0"
                            android:layout_rowSpan="2"
                            android:layout_column="2"
                            android:layout_gravity="fill_vertical"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/call" />

                        <ImageView
                            android:id="@+id/img_heart_yumi"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_row="0"
                            android:layout_rowSpan="2"
                            android:layout_column="3"
                            android:layout_gravity="fill_vertical"
                            android:src="@drawable/heart_non" />

                    </GridLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/mapogoldenpier"
                        android:text="당신의 세포들은\n지금 무엇을 위해 일하고 있을까요?"
                        android:textAlignment="center"
                        android:textColor="#C25EE1"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:text="전시로 만나는 '유미의 세포들' 누적 조회수 34억 뷰의\n네이터 웹툰 부동의 1위 작품. 국내 최초 단독 전시로 개최되었던\n'유미의 세포들'이 다시 한번, 부산으로 찾아갑니다.\n유미의 세포들은 유미의 가장 든든한 조력자이면서 유미 자기 자신이 됩니다."
                        android:textSize="11dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:textColor="#7A3CD2"
                        android:fontFamily="@font/scdream7"
                        android:textSize="30dp"
                        android:text="전시 정보" />

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:columnCount="2"
                        android:rowCount="4">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:text="전시명" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:text="전시기간" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="2"
                            android:layout_column="0"
                            android:text="장소" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="3"
                            android:layout_column="0"
                            android:text="주최/주관" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:text="유미의 세포들 부산전" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:text="2021년 12월 08일 ~ 2022년 03월 20일" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="2"
                            android:layout_column="1"
                            android:text="KT\u0026G 상상마당 부산" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="3"
                            android:layout_column="1"
                            android:text="미디어앤아트" />

                    </GridLayout>

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                        android:columnCount="4"
                        android:rowCount="5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:text="관람요금" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:text="일반요금" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:text="성인" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="2"
                            android:layout_column="1"
                            android:text="청소년" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="3"
                            android:layout_column="1"
                            android:text="어린이" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="4"
                            android:layout_column="1"
                            android:text="특별요금" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="0"
                            android:layout_column="2"
                            android:text="개인" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="1"
                            android:layout_column="2"
                            android:text="18,000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="2"
                            android:layout_column="2"
                            android:text="13,000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="3"
                            android:layout_column="2"
                            android:text="10,000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="4"
                            android:layout_column="2"
                            android:text="8,000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="0"
                            android:layout_column="3"
                            android:text="단체/도민" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="1"
                            android:layout_column="3"
                            android:text="16,000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="2"
                            android:layout_column="3"
                            android:text="11,000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="3"
                            android:layout_column="3"
                            android:text="8,000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="4"
                            android:layout_column="3"
                            android:text="6,000" />

                    </GridLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reserv_yumi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF07BE"
            android:textColor="#FFFFFF"
            android:layout_margin="10dp"
            android:text="예매하기"
            android:textStyle="bold"
            android:fontFamily="@font/scdream7" />

    </LinearLayout>



</LinearLayout>