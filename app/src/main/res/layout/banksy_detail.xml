<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8FA"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/gmarketsansbold"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="서울 전시회" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gmarketsansmedium"
                    android:text="아트 오브 뱅크시"
                    android:textColor="#000000"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="15dp"
                    android:textSize="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="#F1F1F5"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:layout_gravity="center|top"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/banksy2" />

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp"
                        android:columnCount="4"
                        android:rowCount="2">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/pin" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:src="@drawable/calendar" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:layout_marginRight="130dp"
                            android:text="갤러리아포레" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:text="2021.08.20~2022.02.06" />

                        <ImageView
                            android:id="@+id/banksy_call"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_row="0"
                            android:layout_rowSpan="2"
                            android:layout_column="2"
                            android:layout_gravity="fill_vertical"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/call" />

                        <ImageView
                            android:id="@+id/img_heart_banksy"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_row="0"
                            android:layout_rowSpan="2"
                            android:layout_column="3"
                            android:layout_gravity="fill_vertical"
                            android:src="@drawable/heart_non" />

                    </GridLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/mapogoldenpier"
                        android:text="전 세계에 화제를 불러 일으키고 있는 천재 그래피티 아티스트 \n뱅크시(BANKSY)의 예술세계를 직접 만나볼 수 있는 전시"
                        android:textAlignment="center"
                        android:textColor="#5EB4E1"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:text="'아트 오브 뱅크시'(THE ART OF BANKSY)가 이스탄불을 시작으로 베를린,\n암스테르담을 비롯한 총 11개국 월드투어를 마치고 8월 20일 서울에 상륙했다.\n전시회는 아트 테러리스트 '뱅크시'의 예술세계를 다룬 전시로\n디즈멀랜드를 테마로 재 탄생한 설치 미술, 디즈멀랜드 오리지널 소품 등\n다양한 작품이 전시된다."
                        android:textSize="11dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:textColor="#2A9EDC"
                        android:fontFamily="@font/scdream7"
                        android:textSize="30dp"
                        android:text="전시 정보" />

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:columnCount="2"
                        android:rowCount="4">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:text="전시명" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:text="전시기간" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="2"
                            android:layout_column="0"
                            android:text="장소" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="3"
                            android:layout_column="0"
                            android:text="주최/주관" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:text="아트 오브 뱅크시" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:text="2021년 08월 20일 ~ 2022년 02월 06일" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="2"
                            android:layout_column="1"
                            android:text="갤러리아포레 더 서울라이티움" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="3"
                            android:layout_column="1"
                            android:text="LMPE COMPANY" />

                    </GridLayout>

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                        android:columnCount="4"
                        android:rowCount="5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:text="관람요금" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:text="일반요금" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:text="성인" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="2"
                            android:layout_column="1"
                            android:text="청소년" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="3"
                            android:layout_column="1"
                            android:text="어린이" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="4"
                            android:layout_column="1"
                            android:text="유아" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="0"
                            android:layout_column="2"
                            android:text="일반" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="1"
                            android:layout_column="2"
                            android:text="18,000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="2"
                            android:layout_column="2"
                            android:text="12,000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="3"
                            android:layout_column="2"
                            android:text="10,000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="4"
                            android:layout_column="2"
                            android:text="무료" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="0"
                            android:layout_column="3"
                            android:text="단체" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="1"
                            android:layout_column="3"
                            android:text="16,000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="2"
                            android:layout_column="3"
                            android:text="10,000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="3"
                            android:layout_column="3"
                            android:text="8,000" />

                    </GridLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reserv_banksy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF07BE"
            android:textColor="#FFFFFF"
            android:layout_margin="10dp"
            android:text="예매하기"
            android:textStyle="bold"
            android:fontFamily="@font/scdream7" />

    </LinearLayout>



</LinearLayout>
