<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8FA"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/gmarketsansbold"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="그 외 전시회" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gmarketsansmedium"
                    android:text="빛의 벙커"
                    android:textColor="#000000"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="15dp"
                    android:textSize="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="#F1F1F5"
                    android:orientation="vertical"> <!--marginTop나중에 수정-->

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:layout_gravity="center|top"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/mone2" />

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp"
                        android:columnCount="4"
                        android:rowCount="2">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/pin" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:src="@drawable/calendar" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:layout_marginRight="100dp"
                            android:text="빛의 벙커(제주 성산)" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:text="2021.12.01~12.31" />

                        <ImageView
                            android:id="@+id/mone_call"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_row="0"
                            android:layout_rowSpan="2"
                            android:layout_column="2"
                            android:layout_gravity="fill_vertical"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/call" />

                        <ImageView
                            android:id="@+id/img_heart_mone"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_row="0"
                            android:layout_rowSpan="2"
                            android:layout_column="3"
                            android:layout_gravity="fill_vertical"
                            android:src="@drawable/heart_non" />

                    </GridLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/mapogoldenpier"
                        android:text="이번 전시는 특별한 주제 즉, 지중해를 중심으로 돌아간다.\n지중해는 항상 영감의 원천으로써,\n그리고 빛과 색을 통해 작품 속에서 표현되고 있다."
                        android:textAlignment="center"
                        android:textColor="#C25EE1"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:text="이번 새로운 몰입형 미디어아트 전시에서는\n관람객을 인상주의에서 모더니즘까지의 여정으로 초대하며,\n모더니즘의 발생에 있어 중요한 역할을 한 지중해를 흥미롭게 살펴본다.\n이번 전시는 르누아르, 모네,\n피사로, 시냑, 블라맹크, 뒤피와 샤갈등\n약 20명에 달하는 예술가들의 명화 속으로 빠져들 수 있게 구성되었다."
                        android:textSize="11dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:textColor="#7A3CD2"
                        android:fontFamily="@font/scdream7"
                        android:textSize="30dp"
                        android:text="전시 정보" />

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:columnCount="2"
                        android:rowCount="4">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:text="전시명" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:text="전시기간" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="2"
                            android:layout_column="0"
                            android:text="장소" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="3"
                            android:layout_column="0"
                            android:text="주최/주관" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:text="빛의 벙커 모네, 르누아르...샤갈" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:text="2021년 4월 23일 ~ 2022년 2월 28일" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="2"
                            android:layout_column="1"
                            android:text="빛의 벙커(제주 성산)" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="3"
                            android:layout_column="1"
                            android:text="빛의 벙커(제주 성산)" />

                    </GridLayout>

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                        android:columnCount="4"
                        android:rowCount="5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:text="관람요금" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:text="일반요금" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:text="성인" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="2"
                            android:layout_column="1"
                            android:text="청소년" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="3"
                            android:layout_column="1"
                            android:text="어린이" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="4"
                            android:layout_column="1"
                            android:text="특별요금" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="0"
                            android:layout_column="2"
                            android:text="개인" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="1"
                            android:layout_column="2"
                            android:text="18,000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="2"
                            android:layout_column="2"
                            android:text="13,000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="3"
                            android:layout_column="2"
                            android:text="10,000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="4"
                            android:layout_column="2"
                            android:text="8,000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="0"
                            android:layout_column="3"
                            android:text="단체/도민" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="1"
                            android:layout_column="3"
                            android:text="16,000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="2"
                            android:layout_column="3"
                            android:text="11,000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="3"
                            android:layout_column="3"
                            android:text="8,000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="4"
                            android:layout_column="3"
                            android:text="6,000" />

                    </GridLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reserv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF07BE"
            android:textColor="#FFFFFF"
            android:layout_margin="10dp"
            android:text="예매하기"
            android:textStyle="bold"
            android:fontFamily="@font/scdream7" />

    </LinearLayout>



</LinearLayout>