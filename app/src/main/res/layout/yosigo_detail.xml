<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8FA"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/gmarketsansbold"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="서울 전시회" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gmarketsansmedium"
                    android:text="요시고 사진전"
                    android:textColor="#000000"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="15dp"
                    android:textSize="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="#F1F1F5"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:layout_gravity="center|top"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/yosigo2" />

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp"
                        android:columnCount="4"
                        android:rowCount="2">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/pin" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:src="@drawable/calendar" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:layout_marginRight="130dp"
                            android:text="그라운드 시소 서촌" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:text="2021.06.23~2022.03.01" />

                        <ImageView
                            android:id="@+id/yosigo_call"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_row="0"
                            android:layout_rowSpan="2"
                            android:layout_column="2"
                            android:layout_gravity="fill_vertical"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/call" />

                        <ImageView
                            android:id="@+id/img_heart_yosigo"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_row="0"
                            android:layout_rowSpan="2"
                            android:layout_column="3"
                            android:layout_gravity="fill_vertical"
                            android:src="@drawable/heart_non" />

                    </GridLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/mapogoldenpier"
                        android:text="푸른 지중해를 둘러싼 유럽의 휴향지부터 마이애미, 두바이,\n부다페스트 등 세계 여러 여행지를 기록한 350여 점의 사진들 "
                        android:textAlignment="center"
                        android:textColor="#5EB4E1"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:text="예술적 심상을 극대화하는 대형 사진, 영상, 사운드 등으로 설치되어\n사진이 품고 있는 따뜻한 온기와 분위기를 더욱 더 생생하게 느낄 수 있다.\n평범한 일상과 풍경이 영화의 한 장면처럼 기록되는 순간의 마법.\n독창적인 미학과 작품 세계를 구축한 이야기를 직접 들려준다."
                        android:textSize="11dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:textColor="#2A9EDC"
                        android:fontFamily="@font/scdream7"
                        android:textSize="30dp"
                        android:text="전시 정보" />

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:columnCount="2"
                        android:rowCount="4">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:text="전시명" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:text="전시기간" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="2"
                            android:layout_column="0"
                            android:text="장소" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="3"
                            android:layout_column="0"
                            android:text="주최/주관" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:text="요시고 사진전 : 따뜻한 휴일의 기록" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:text="2021년 6월 23일 ~ 2022년 03월 01일" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="2"
                            android:layout_column="1"
                            android:text="그라운드 시소 서촌" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="3"
                            android:layout_column="1"
                            android:text="그라운드 시소 서촌" />

                    </GridLayout>

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                        android:columnCount="4"
                        android:rowCount="5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:text="관람요금" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:text="일반요금" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:text="성인" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="2"
                            android:layout_column="1"
                            android:text="청소년" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="3"
                            android:layout_column="1"
                            android:text="어린이" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="4"
                            android:layout_column="1"
                            android:text="유아" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="0"
                            android:layout_column="2"
                            android:text="일반" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="1"
                            android:layout_column="2"
                            android:text="18,000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="2"
                            android:layout_column="2"
                            android:text="12,000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="3"
                            android:layout_column="2"
                            android:text="10,000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="4"
                            android:layout_column="2"
                            android:text="무료" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="0"
                            android:layout_column="3"
                            android:text="단체" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="1"
                            android:layout_column="3"
                            android:text="16,000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="2"
                            android:layout_column="3"
                            android:text="10,000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="3"
                            android:layout_column="3"
                            android:text="8,000" />

                    </GridLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reserv_yosigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF07BE"
            android:textColor="#FFFFFF"
            android:layout_margin="10dp"
            android:text="예매하기"
            android:textStyle="bold"
            android:fontFamily="@font/scdream7" />

    </LinearLayout>



</LinearLayout>
