<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8FA"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/gmarketsansbold"
            android:textSize="20dp"
            android:text="서울 전시회" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="23dp"
                app:cardCornerRadius="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dunggeunmo"
                    android:text="앨리스 달튼 브라운"
                    android:textColor="#000000"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="6dp"
                    android:textSize="13dp"/>

                <ImageButton
                    android:id="@+id/list_alice"
                    android:layout_width="320dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/alice" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dunggeunmo"
                    android:textColor="#000000"
                    android:text="요시고 사진전"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="6dp"
                    android:textSize="13dp"/>

                <ImageButton
                    android:id="@+id/list_yosigo"
                    android:layout_width="320dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/yosigo" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dunggeunmo"
                    android:textColor="#000000"
                    android:text="아트 오브 뱅크시"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="6dp"
                    android:textSize="13dp"/>

                <ImageButton
                    android:id="@+id/list_banksy"
                    android:layout_width="320dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/banksy" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>



</LinearLayout>
