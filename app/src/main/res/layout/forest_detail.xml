<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8FA"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/gmarketsansbold"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="그 외 전시회" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gmarketsansmedium"
                    android:text="미디어 포레스트 "
                    android:textColor="#000000"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="15dp"
                    android:textSize="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="#F1F1F5"
                    android:orientation="vertical"> <!--marginTop나중에 수정-->

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:layout_gravity="center|top"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/forest2" />

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp"
                        android:columnCount="4"
                        android:rowCount="2">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/pin" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:src="@drawable/calendar" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:layout_marginRight="100dp"
                            android:text="여수세계박람회" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:text="2021.08.18~12.31" />

                        <ImageView
                            android:id="@+id/forest_call"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_row="0"
                            android:layout_rowSpan="2"
                            android:layout_column="2"
                            android:layout_gravity="fill_vertical"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/call" />

                        <ImageView
                            android:id="@+id/img_heart_forest"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_row="0"
                            android:layout_rowSpan="2"
                            android:layout_column="3"
                            android:layout_gravity="fill_vertical"
                            android:src="@drawable/heart_non" />

                    </GridLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/mapogoldenpier"
                        android:text="모든 생각을 잠시 내려놓고 아이뮤지엄의 Media Forest가\n선사하는 경이롭고 아름다움을 상상하고 느껴보세요"
                        android:textAlignment="center"
                        android:textColor="#C25EE1"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:text="빛과 어둠의 경계에서 만들어지는 색들의 신비로움과\n시공간의 경계를 넘는 경이로운 아름다움을 상상하고 느끼고 감상할 수 있다.\n보이는 것 이상의 설렘, 우주의 꿈결을 품은 '북극의 빛'"
                        android:textSize="11dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:textColor="#7A3CD2"
                        android:fontFamily="@font/scdream7"
                        android:textSize="30dp"
                        android:text="전시 정보" />

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:columnCount="2"
                        android:rowCount="4">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:text="전시명" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:text="전시기간" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="2"
                            android:layout_column="0"
                            android:text="장소" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="3"
                            android:layout_column="0"
                            android:text="주최/주관" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:fontFamily="@font/scdream4"
                            android:text="미디어 포레스트 - 여수"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:text="2021년 08월 18일 ~ 2021년 12월 31일" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="2"
                            android:layout_column="1"
                            android:text="여수세계박람회" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="3"
                            android:layout_column="1"
                            android:text="아이랩미디어" />

                    </GridLayout>

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                        android:columnCount="4"
                        android:rowCount="5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:text="관람요금" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:text="일반요금" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:text="성인" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="2"
                            android:layout_column="1"
                            android:text="청소년" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="3"
                            android:layout_column="1"
                            android:text="어린이" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="4"
                            android:layout_column="1"
                            android:text="특별요금" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="0"
                            android:layout_column="2"
                            android:text="개인" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="1"
                            android:layout_column="2"
                            android:text="18,000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="2"
                            android:layout_column="2"
                            android:text="13,000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="3"
                            android:layout_column="2"
                            android:text="10,000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="4"
                            android:layout_column="2"
                            android:text="8,000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="0"
                            android:layout_column="3"
                            android:text="단체/도민" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="1"
                            android:layout_column="3"
                            android:text="16,000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="2"
                            android:layout_column="3"
                            android:text="11,000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="3"
                            android:layout_column="3"
                            android:text="8,000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/scdream4"
                            android:textStyle="bold"
                            android:layout_row="4"
                            android:layout_column="3"
                            android:text="6,000" />

                    </GridLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reserv_forest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF07BE"
            android:textColor="#FFFFFF"
            android:layout_margin="10dp"
            android:text="예매하기"
            android:textStyle="bold"
            android:fontFamily="@font/scdream7" />

    </LinearLayout>



</LinearLayout>